<div style="border: 2px solid red; padding: 20px;">
  

<%= form_with(model: mood_entry, local: true) do |form| %>
  <div>
    <%= form.label :entry_date %>
    <%= form.date_field :entry_date %>
  </div>

  <div>
    <%= form.label :mood %>
    <%= form.select :mood, ["😊", "😐", "😢", "😡", "😰"], prompt: "Select your mood" %>
  </div>

  <div>
    <%= form.label :note %>
    <%= form.text_area :note, maxlength: 200, id: "note_field", rows: 4, cols: 50 %>
    <p id="char_count">0 / 200</p>
  </div>


  <div>
    <%= form.submit "Save" %>
  </div>
<% end %>
